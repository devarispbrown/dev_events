source 'https://rubygems.org'

gem 'rails', '3.2.11'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'rails-api'
gem 'thin'
gem 'active_model_serializers', :github => 'rails-api/active_model_serializers'
gem 'sass-rails'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'jasmine'
  gem 'debugger'
end

group :test do
  gem 'rb-fsevent'
  gem 'growl'
end

group :assets do
  gem 'coffee-rails'
  gem 'compass-rails'
  gem 'uglifier'
  gem 'bootstrap-sass'
  gem 'handlebars_assets'
end

group :development do
  gem 'quiet_assets'
end

group :production do
  gem 'pg'
end

